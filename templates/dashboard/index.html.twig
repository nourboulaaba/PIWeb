{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<h1 class="h3 mb-3">Bienvenue sur le tableau de bord</h1>
<div class="row">
    <!-- Boutons de congés -->
    <div class="col-md-4 mb-4">
        <a href="{{ path('app_conge_new') }}" class="btn btn-primary w-100 py-3">
            <i data-feather="plus-circle" class="me-2"></i> Nouvelle demande de congé
        </a>
    </div>

    <div class="col-md-4 mb-4">
        <a href="{{ path('app_conge_index') }}" class="btn btn-warning w-100 py-3">
            <i data-feather="clock" class="me-2"></i> Congés en attente
        </a>
    </div>

    <div class="col-md-4 mb-4">
        <a href="{{ path('app_conge_index_tous') }}" class="btn btn-secondary w-100 py-3">
            <i data-feather="list" class="me-2"></i> Tous les congés
        </a>
    </div>

    <div class="col-md-4 mb-4">
        <a href="{{ path('app_conge_search') }}" class="btn btn-info text-white w-100 py-3">
            <i data-feather="search" class="me-2"></i> Rechercher par employé
        </a>
    </div>

    <!-- Boutons de réclamations -->
    <div class="col-md-4 mb-4">
        <a href="{{ path('app_reclamation_new') }}" class="btn btn-success w-100 py-3">
            <i data-feather="plus" class="me-2"></i> Nouvelle réclamation
        </a>
    </div>

    <div class="col-md-4 mb-4">
        <a href="{{ path('app_reclamation_index') }}" class="btn btn-dark w-100 py-3">
            <i data-feather="message-square" class="me-2"></i> Toutes les réclamations
        </a>
    </div>

    <div class="col-md-4 mb-4">
        <a href="{{ path('app_reclamation_traites') }}" class="btn btn-secondary w-100 py-3">
            <i data-feather="check-circle" class="me-2"></i> Réclamations traitées
        </a>
    </div>
</div>
{% endblock %}
