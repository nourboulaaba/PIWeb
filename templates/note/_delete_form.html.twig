{# templates/note/_delete_form.html.twig #}
<form method="post" action="{{ path('app_note_delete', {'id': note.id}) }}" onsubmit="return confirm('Êtes-vous sûr(e) de vouloir supprimer cet avis ?');">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ note.id) }}">
  <button class="btn btn-danger btn-sm">
    <i class="fas fa-trash"></i> Supprimer mon avis
  </button>
</form>
