<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Système de Gestion des Ressources Humaines">
    <meta name="author" content="RH Admin">
    <meta name="keywords" content="rh, ressources humaines, gestion, administration, dashboard">

    <!-- Favicon -->
    <link rel="shortcut icon" href="{{ asset('backoffice/img/icons/icon-48x48.png') }}" />

    <!-- Fonts & Icons -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <title>{% block title %}Gestion RH{% endblock %}</title>

    <!-- Core CSS -->
    <link href="{{ asset('backoffice/css/app.css') }}" rel="stylesheet">
    <link href="{{ asset('backoffice/css/notifications.css') }}" rel="stylesheet">
    <link href="{{ asset('backoffice/css/custom-dropdown.css') }}" rel="stylesheet">

    <!-- Custom CSS -->
    <style>
        :root {
            --primary-color: #4361ee;
            --primary-light: #4895ef;
            --primary-dark: #3a0ca3;
            --secondary-color: #4cc9f0;
            --success-color: #2ecc71;
            --warning-color: #f39c12;
            --danger-color: #e74c3c;
            --light-color: #f8f9fa;
            --dark-color: #343a40;
            --gray-color: #6c757d;
            --white-color: #ffffff;
            --body-bg: #f5f7fb;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--body-bg);
            color: #495057;
        }

        /* Sidebar styling */
        .sidebar {
            background: linear-gradient(135deg, var(--primary-dark), var(--primary-color));
            box-shadow: 0 0.15rem 1.75rem rgba(0, 0, 0, 0.15);
        }

        .sidebar-content {
            padding-top: 1rem;
        }

        .sidebar-brand {
            padding: 1.15rem 1.5rem;
            display: flex;
            align-items: center;
            color: var(--white-color);
        }

        .sidebar-brand img {
            margin-right: 0.75rem;
        }

        .sidebar-header {
            color: rgba(255, 255, 255, 0.5);
            font-size: 0.75rem;
            padding: 1.5rem 1.5rem 0.5rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .sidebar-item {
            padding: 0.25rem 1.5rem;
            font-size: 0.9rem;
        }

        .sidebar-link {
            padding: 0.625rem 0.25rem;
            color: rgba(255, 255, 255, 0.7);
            font-weight: 400;
            display: block;
            border-radius: 0.25rem;
            transition: all 0.2s ease-in-out;
        }

        .sidebar-link:hover {
            color: var(--white-color);
            background-color: rgba(255, 255, 255, 0.1);
        }

        .sidebar-item.active .sidebar-link {
            color: var(--white-color);
            background-color: rgba(255, 255, 255, 0.2);
            font-weight: 500;
        }

        .sidebar-link i, .sidebar-link svg {
            margin-right: 0.75rem;
            color: rgba(255, 255, 255, 0.6);
            font-size: 1.1rem;
            width: 1.2rem;
            height: 1.2rem;
            text-align: center;
        }

        .sidebar-item.active .sidebar-link i,
        .sidebar-item.active .sidebar-link svg {
            color: var(--white-color);
        }

        .sidebar-cta {
            margin: 1.5rem;
            padding: 1.25rem;
            border-radius: 0.5rem;
            background-color: rgba(0, 0, 0, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        /* Navbar styling */
        .navbar {
            background-color: var(--white-color);
            border-bottom: 1px solid #e9ecef;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            padding: 0.5rem 1.5rem;
        }

        .navbar-nav {
            display: flex;
            align-items: center;
        }

        .nav-item {
            margin-left: 0.5rem;
        }

        .avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            object-fit: cover;
        }

        /* Content styling */
        .content {
            padding: 2rem 1rem;
        }

        .card {
            border: none;
            border-radius: 0.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            margin-bottom: 1.5rem;
        }

        .card-header {
            background-color: transparent;
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
            padding: 1rem 1.25rem;
        }

        .card-title {
            font-weight: 600;
            color: var(--dark-color);
            margin-bottom: 0;
        }

        /* Footer styling */
        footer {
            background-color: var(--white-color);
            border-top: 1px solid #e9ecef;
            padding: 1rem 1.5rem;
            font-size: 0.875rem;
        }

        /* Utility classes */
        .badge-role {
            padding: 0.35em 0.65em;
            font-size: 0.75em;
            font-weight: 600;
            border-radius: 0.25rem;
            text-transform: uppercase;
            display: inline-block;
        }

        .badge-role.admin {
            background-color: #3a0ca3;
            color: white;
        }

        .badge-role.rh {
            background-color: #f72585;
            color: white;
        }

        .badge-role.employe {
            background-color: #4361ee;
            color: white;
        }

        .status-badge {
            padding: 0.35em 0.65em;
            font-size: 0.75em;
            font-weight: 600;
            border-radius: 0.25rem;
            display: inline-block;
        }

        .status-badge.active {
            background-color: #2ecc71;
            color: white;
        }

        .status-badge.inactive {
            background-color: #e74c3c;
            color: white;
        }

        /* Responsive adjustments */
        @media (max-width: 767.98px) {
            .sidebar {
                margin-left: -250px;
            }

            .sidebar.toggled {
                margin-left: 0;
            }

            .content {
                padding: 1.5rem 0.75rem;
            }
        }
    </style>

    {% block stylesheets %}{% endblock %}
</head>

<body>
    <div class="wrapper">
        {% include 'backoffice/partials/sidbar.html.twig' %}

        <div class="main">
            {% include 'backoffice/partials/navbar.html.twig' %}

            <main class="content">
                <div class="container-fluid p-0">
                    {% block body %}{% endblock %}
                </div>
            </main>

            {% include 'backoffice/partials/footer.html.twig' %}
        </div>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="{{ asset('backoffice/js/app.js') }}"></script>
    <script src="{{ asset('backoffice/js/notification-counter.js') }}"></script>

    <script>
        // Initialiser les icônes Feather
        document.addEventListener("DOMContentLoaded", function() {
            feather.replace();

            // Gestion du toggle du sidebar
            const sidebarToggle = document.querySelector('.js-sidebar-toggle');
            const sidebar = document.querySelector('.sidebar');

            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', function() {
                    sidebar.classList.toggle('toggled');
                });
            }

            // Afficher les messages flash avec SweetAlert
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    Swal.fire({
                        icon: '{{ label == "success" ? "success" : (label == "warning" ? "warning" : (label == "info" ? "info" : "error")) }}',
                        title: '{{ label|capitalize }}',
                        html: '{{ message|raw }}',
                        timer: 5000,
                        timerProgressBar: true,
                        showConfirmButton: false,
                        toast: true,
                        position: 'top-end'
                    });
                {% endfor %}
            {% endfor %}
        });
    </script>

    {% block javascripts %}{% endblock %}
</body>

</html>
