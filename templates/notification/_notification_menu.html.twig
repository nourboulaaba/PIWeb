{% if is_granted('ROLE_RH') %}
    <li class="nav-item dropdown">
        <a class="nav-icon" href="#" id="notificationsDropdown" aria-expanded="false">
            <div class="position-relative">
                <i class="align-middle" data-feather="bell"></i>
                {% if unreadCount > 0 %}
                    <span class="indicator notification-badge">{{ unreadCount }}</span>
                {% endif %}
            </div>
        </a>
        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-end py-0 notification-dropdown-menu" aria-labelledby="notificationsDropdown">
            <div class="dropdown-menu-header">
                {% if unreadCount > 0 %}
                    {{ unreadCount }} nouvelle{% if unreadCount > 1 %}s{% endif %} notification{% if unreadCount > 1 %}s{% endif %}
                {% else %}
                    Aucune nouvelle notification
                {% endif %}
            </div>
            <div class="list-group">
                {% if notifications is empty %}
                    <div class="list-group-item">
                        <div class="text-center py-2">
                            <i class="fas fa-bell-slash text-muted me-2"></i> Aucune notification
                        </div>
                    </div>
                {% else %}
                    {% for notification in notifications|slice(0, 5) %}
                        <a href="{{ notification.link|default('#') }}" class="list-group-item list-group-item-action">
                            <div class="row g-0 align-items-center">
                                <div class="col-2">
                                    <div class="notification-icon-wrapper">
                                        {% if notification.type == 'new_user' %}
                                            <i class="fas fa-user-plus text-primary"></i>
                                        {% else %}
                                            <i class="fas fa-bell text-warning"></i>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="col-10">
                                    <div class="text-truncate">{{ notification.message }}</div>
                                    <div class="text-muted small mt-1">{{ notification.createdAt|date('d/m/Y H:i') }}</div>
                                </div>
                            </div>
                        </a>
                    {% endfor %}
                {% endif %}
            </div>
            <div class="dropdown-menu-footer">
                <a href="{{ path('app_notifications') }}" class="text-muted">Afficher toutes les notifications</a>
            </div>
        </div>
    </li>
{% endif %}
