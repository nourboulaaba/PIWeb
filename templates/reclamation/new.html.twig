{% extends 'basefront.html.twig' %}

{% block title %}Nouvelle Réclamation{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2>Nouvelle Réclamation Manuelle</h2>

    {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}
    {% if success %}
        <div class="alert alert-success">{{ success }}</div>
    {% endif %}

    <form action="{{ path('app_reclamation_new') }}" method="post">
        <div class="mb-3">
            <label for="user_id" class="form-label">ID Utilisateur</label>
            <input type="number" id="user_id" name="user_id" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="conge_id" class="form-label">ID Congé</label>
            <input type="number" id="conge_id" name="conge_id" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="sujet" class="form-label">Sujet</label>
            <input type="text" id="sujet" name="sujet" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" name="description" class="form-control" required></textarea>
        </div>
        <div class="mb-3">
            <label for="date" class="form-label">Date</label>
            <input type="date" id="date" name="date" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="statut" class="form-label">Statut</label>
            <select id="statut" name="statut" class="form-control">
                <option value="Non traité">Non traité</option>
                <option value="En cours">En cours</option>
                <option value="Traité">Traité</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Envoyer</button>
    </form>
</div>
{% endblock %}