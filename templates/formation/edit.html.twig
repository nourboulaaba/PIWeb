{# templates/formation/edit.html.twig #}
{% extends 'indexback.html.twig' %}

{% block title %}Modifier la Formation{% endblock %}

{% block stylesheets %}{{ parent() }}{% endblock %}

{% block body %}
<div class="container py-5 animate__animated animate__fadeIn">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card card-add-user">
        <div class="card-header">
          <h2 class="mb-0">
            <i class="bi bi-pencil-square header-icon"></i>
            Modifier la formation
          </h2>
          <p class="text-white-50 mb-0 mt-2">Mettez à jour les informations de la formation sélectionnée</p>
        </div>

        <div class="card-body">
          {{ include('formation/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

          <div class="d-flex justify-content-between align-items-center mt-4">
            <a href="{{ path('app_formation_index') }}" class="btn btn-outline-secondary">
              <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
            {{ include('formation/_delete_form.html.twig') }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
