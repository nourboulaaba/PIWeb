{# templates/recrutement/pdf_template.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Recruitment Statistics Report</title>
    <style>
        body { font-family: Arial, sans-serif; }
        .header { text-align: center; margin-bottom: 20px; }
        .section { margin-bottom: 30px; }
        .chart-container { text-align: center; margin: 20px 0; }
        .chart { max-width: 100%; height: auto; }
        .insights { background-color: #f8f9fa; padding: 15px; border-left: 4px solid #3498db; }
        table { width: 100%; border-collapse: collapse; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th { background-color: #f2f2f2; }
    </style>
</head>
<body>
<div class="header">
    <h1>Recruitment Statistics Report</h1>
    <p>Generated on {{ "now"|date("Y-m-d H:i") }}</p>
</div>

<div class="section">
    <h2>Key Metrics</h2>
    <table>
        <tr>
            <th>Metric</th>
            <th>Value</th>
        </tr>
        <tr>
            <td>Total Recruitment Processes</td>
            <td>{{ stats.totalRecrutements }}</td>
        </tr>
        <tr>
            <td>Total Interviews Conducted</td>
            <td>{{ stats.totalEntretiens }}</td>
        </tr>
        <tr>
            <td>Approval Rate</td>
            <td>{{ ((stats.approvalStats.approved / stats.totalEntretiens) * 100)|number_format(1) }}%</td>
        </tr>
    </table>
</div>

<div class="section">
    <h2>Interview Approval Status</h2>
    <div class="chart-container">
        <img src="{{ chartImages.approvalChart }}" class="chart" alt="Approval Status Chart">
    </div>
</div>

<div class="section">
    <h2>Process Distribution</h2>
    <div class="chart-container">
        <img src="{{ chartImages.processChart }}" class="chart" alt="Process Distribution Chart">
    </div>
</div>



<div class="section">
    <h2>AI Analysis & Recommendations</h2>
    <div class="insights">
        <!-- AI_INSIGHTS -->
    </div>
</div>
</body>
</html>