{% extends 'base.html.twig' %}

{% block title %}Tous les congés{% endblock %}

{% block body %}
<h1>{{ statut }}</h1>

<table>
    <tr>
        <th>ID</th>
        <th>Employé</th>
        <th>Date de début</th>
        <th>Date de fin</th>
        <th>Statut</th>
    </tr>
    {% for conge in conges %}
        <tr>
            <td>{{ conge.idConges }}</td>
            <td>{{ conge.employe.id }}</td>
            <td>{{ conge.dateDebut|date('Y-m-d') }}</td>
            <td>{{ conge.dateFin|date('Y-m-d') }}</td>
            <td>{{ conge.statut }}</td>

        </tr>
    {% endfor %}
</table>
{% endblock %}
