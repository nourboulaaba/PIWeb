{# certificat/index.html.twig #}
{% extends 'indexback.html.twig' %}
{% block title %}Liste des Certificats{% endblock %}
{% block body %}
<div class="container-fluid">
  <div class="dashboard-container animate__animated animate__fadeIn">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1 class="h4 text-gray-800">Liste des Certificats</h1>
      </div>
      <a href="{{ path('app_certificat_new') }}" class="btn btn-success">
        <i class="fas fa-plus"></i> Nouveau Certificat
      </a>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead class="table-primary">
          <tr>
            <th>ID</th>
            <th>Date Examen</th>
            <th>Heure</th>
            <th>Durée</th>
            <th>Prix</th>
            <th>Niveau</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
        {% for certificat in certificats %}
          <tr>
            <td>{{ certificat.idCertif }}</td>
            <td>{{ certificat.dateExamen|date('d/m/Y') }}</td>
            <td>{{ certificat.heure|date('H:i') }}</td>
            <td>{{ certificat.duree }} min</td>
            <td>{{ certificat.prixExam }} DT</td>
            <td>{{ certificat.niveau }}</td>
            <td>
              <a href="{{ path('app_certificat_show', {'idCertif': certificat.idCertif}) }}" class="btn btn-sm btn-info">
                <i class="fas fa-eye"></i>
              </a>
              <a href="{{ path('app_certificat_edit', {'idCertif': certificat.idCertif}) }}" class="btn btn-sm btn-warning">
                <i class="fas fa-edit"></i>
              </a>
            </td>
          </tr>
        {% else %}
          <tr><td colspan="7" class="text-center text-muted">Aucun certificat trouvé.</td></tr>
        {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}

