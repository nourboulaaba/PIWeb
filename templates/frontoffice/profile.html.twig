{% extends 'basefront.html.twig' %}

{% block title %}Mon Profil - Portail RH{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <!-- Sidebar de navigation -->
        <div class="col-lg-3 mb-4">
            <div class="card border-0 shadow">
                <div class="card-body">
                    <div class="text-center mb-4">
                        {% if user.profilePhoto %}
                            <img src="{{ asset('uploads/profile_photos/' ~ user.profilePhoto) }}" alt="Photo de profil" class="rounded-circle img-fluid mb-3" style="width: 120px; height: 120px; object-fit: cover;">
                        {% else %}
                            <div class="bg-secondary bg-opacity-25 rounded-circle d-flex align-items-center justify-content-center mb-3 mx-auto" style="width: 120px; height: 120px;">
                                <i class="fas fa-user fa-3x text-secondary"></i>
                            </div>
                        {% endif %}
                        <h5 class="mb-0">{{ user.firstName }} {{ user.lastName }}</h5>
                        <p class="text-muted">{{ user.role }}</p>
                    </div>

                    <nav class="nav flex-column">
                        <a class="nav-link active" href="#">
                            <i class="fas fa-user-circle me-2"></i> Mon Profil
                        </a>
                        <a class="nav-link" href="#">
                            <i class="fas fa-calendar-alt me-2"></i> Mes Congés
                        </a>
                        <a class="nav-link" href="#">
                            <i class="fas fa-file-invoice me-2"></i> Mes Bulletins de Paie
                        </a>
                        <a class="nav-link" href="#">
                            <i class="fas fa-graduation-cap me-2"></i> Mes Formations
                        </a>
                        <a class="nav-link" href="#">
                            <i class="fas fa-tasks me-2"></i> Mes Objectifs
                        </a>
                        <a class="nav-link" href="#">
                            <i class="fas fa-comments me-2"></i> Mes Entretiens
                        </a>
                        <a class="nav-link" href="#">
                            <i class="fas fa-clipboard-list me-2"></i> Mes Demandes
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Contenu principal -->
        <div class="col-lg-9">
            <!-- Informations personnelles -->
            <div class="card border-0 shadow mb-4">
                <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                    <h5 class="mb-0">Informations personnelles</h5>
                    <a href="{{ path('frontoffice_profile_edit') }}" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit me-1"></i> Modifier mon profil
                    </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <p class="text-muted mb-1">Nom complet</p>
                            <p class="fw-bold">{{ user.firstName }} {{ user.lastName }}</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p class="text-muted mb-1">Matricule</p>
                            <p class="fw-bold">{{ user.identifier }}</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p class="text-muted mb-1">Email</p>
                            <p class="fw-bold">{{ user.email }}</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p class="text-muted mb-1">Téléphone</p>
                            <p class="fw-bold">{{ user.phoneNumber }}</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p class="text-muted mb-1">CIN</p>
                            <p class="fw-bold">{{ user.cin }}</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p class="text-muted mb-1">Date d'embauche</p>
                            <p class="fw-bold">
                                {% if user.hireDate %}
                                    {{ user.hireDate|date('d/m/Y') }}
                                {% else %}
                                    -
                                {% endif %}
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p class="text-muted mb-1">Rôle</p>
                            <p class="fw-bold">{{ user.role }}</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p class="text-muted mb-1">Salaire</p>
                            <p class="fw-bold">{{ user.salary }} TND</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Documents -->
            <div class="card border-0 shadow mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">Mon CV</h5>
                </div>
                <div class="card-body">
                    {% if user.cv %}
                        <a href="{{ asset('uploads/cvs/' ~ user.cv) }}" class="btn btn-outline-success" download>
                            <i class="fas fa-download me-2"></i>Télécharger mon CV
                        </a>
                    {% else %}
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle me-2"></i>Aucun CV déposé.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/theme.js') }}"></script>
{% endblock %}