{% extends 'indexback.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
  <div class="container">
    <h1>Edit User</h1>

    {{ form_start(form) }}
    <div class="row">
      <div class="col-md-6">
        {{ form_row(form.email) }}
        {{ form_row(form.first_name) }}
        {{ form_row(form.last_name) }}
        {{ form_row(form.cin) }}
        {{ form_row(form.phone_number) }}
      </div>
      <div class="col-md-6">
        {{ form_row(form.cv) }}
        {{ form_row(form.profile_photo) }}
        {{ form_row(form.salary) }}
      </div>
    </div>

    <div class="form-group mt-3">
      <label>Role</label>
      {% for child in form.role %}
        <div class="form-check">
          {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
          {{ form_label(child, null, {'label_attr': {'class': 'form-check-label'}}) }}
        </div>
      {% endfor %}
    </div>

    <button class="btn btn-primary mt-3">{{ button_label|default('Update') }}</button>
    {{ form_end(form) }}

    <a href="{{ path('app_user_list') }}" class="btn btn-secondary mt-3">Back to list</a>
  </div>
{% endblock %}
