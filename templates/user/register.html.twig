{% extends 'indexback.html.twig' %}

{% block title %}Ajouter un Utilisateur{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
  <style>
    .card-add-user {
      border: none;
      border-radius: 12px;
      box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
    }
    
    .card-add-user:hover {
      box-shadow: 0 0.7rem 2rem rgba(0, 0, 0, 0.15);
    }
    
    .card-header {
      background: linear-gradient(45deg, #3a0ca3, #4361ee);
      color: white;
      border-radius: 12px 12px 0 0 !important;
      padding: 1.5rem;
      position: relative;
      overflow: hidden;
    }
    
    .card-header::before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      width: 100%;
      height: 100%;
      background: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23ffffff' fill-opacity='0.1' fill-rule='evenodd'/%3E%3C/svg%3E") repeat;
      opacity: 0.5;
    }
    
    .header-icon {
      font-size: 1.8rem;
      margin-right: 1rem;
      vertical-align: middle;
    }
    
    .card-body {
      padding: 2rem;
    }
    
    .input-group-text {
      background-color: #f8f9fa;
      border-right: none;
    }
    
    .form-control {
      border-left: none;
    }
    
    .form-control:focus {
      box-shadow: 0 0 0 0.25rem rgba(67, 97, 238, 0.15);
      border-color: #ced4da;
    }
    
    .form-control:focus + .input-group-text {
      border-color: #ced4da;
    }
    
    .section-divider {
      width: 100%;
      height: 1px;
      background: linear-gradient(to right, transparent, #dee2e6, transparent);
      margin: 2rem 0;
    }
    
    .role-select {
      background-color: #f8f9fa;
      border-radius: 10px;
      padding: 1rem;
      margin-top: 0.5rem;
    }
    
    .role-item {
      background-color: white;
      border-radius: 8px;
      padding: 0.75rem 1rem;
      margin-bottom: 0.5rem;
      transition: all 0.2s ease;
      border: 1px solid #e9ecef;
    }
    
    .role-item:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    }
    
    .role-item input:checked + label {
      font-weight: 600;
      color: #4361ee;
    }
    
    .file-upload {
      border: 2px dashed #dee2e6;
      border-radius: 8px;
      padding: 1.5rem;
      text-align: center;
      transition: all 0.3s ease;
      margin-top: 0.5rem;
    }
    
    .file-upload:hover {
      border-color: #4361ee;
      background-color: rgba(67, 97, 238, 0.05);
    }
    
    .upload-icon {
      font-size: 2rem;
      color: #6c757d;
      margin-bottom: 0.5rem;
    }
    
    .btn-primary {
      background-color: #4361ee;
      border-color: #4361ee;
    }
    
    .btn-primary:hover {
      background-color: #3a56d4;
      border-color: #3a56d4;
    }
    
    .form-floating > .form-control {
      height: calc(3.5rem + 2px);
      padding: 1rem 0.75rem;
    }
    
    .form-floating > label {
      padding: 1rem 0.75rem;
    }
    
    .form-hint {
      font-size: 0.8rem;
      color: #6c757d;
      margin-top: 0.25rem;
    }
    
    @media (max-width: 768px) {
      .card-body {
        padding: 1.25rem;
      }
    }
  </style>
{% endblock %}

{% block body %}
<div class="container py-5 animate__animated animate__fadeIn">
  <div class="row justify-content-center">
    <div class="col-xxl-9 col-xl-10 col-lg-11">
      <div class="card card-add-user">
        <div class="card-header">
          <h2 class="mb-0">
            <i class="bi bi-person-plus-fill header-icon"></i>
            Ajouter un nouvel utilisateur
          </h2>
          <p class="text-white-50 mb-0 mt-2">Remplissez les informations pour créer un nouveau compte utilisateur</p>
        </div>
        
        <div class="card-body">
          {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate', 'id': 'registrationForm'}}) }}
          
          <div class="row g-4">
            <!-- Informations personnelles -->
            <div class="col-md-6">
              <h4 class="mb-3">
                <i class="bi bi-person-vcard"></i>
                Informations personnelles
              </h4>
              
              <div class="mb-3">
                <label class="form-label">Prénom</label>
                <div class="input-group">
                  {{ form_widget(registrationForm.first_name, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
                  <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                </div>
                <div class="text-danger small">{{ form_errors(registrationForm.first_name) }}</div>
              </div>
              
              <div class="mb-3">
                <label class="form-label">Nom</label>
                <div class="input-group">
                  {{ form_widget(registrationForm.last_name, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                  <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                </div>
                <div class="text-danger small">{{ form_errors(registrationForm.last_name) }}</div>
              </div>
              
              <div class="mb-3">
                <label class="form-label">CIN</label>
                <div class="input-group">
                  {{ form_widget(registrationForm.cin, {'attr': {'class': 'form-control', 'placeholder': 'Numéro CIN'}}) }}
                  <span class="input-group-text"><i class="bi bi-credit-card-2-front-fill"></i></span>
                </div>
                <div class="text-danger small">{{ form_errors(registrationForm.cin) }}</div>
                <div class="form-hint">Format: 8 chiffres sans espaces</div>
              </div>
              
              <div class="mb-3">
                <label class="form-label">Téléphone</label>
                <div class="input-group">
                  {{ form_widget(registrationForm.phone_number, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'}}) }}
                  <span class="input-group-text"><i class="bi bi-telephone-fill"></i></span>
                </div>
                <div class="text-danger small">{{ form_errors(registrationForm.phone_number) }}</div>
              </div>
            </div>
            
            <!-- Informations de compte -->
            <div class="col-md-6">
              <h4 class="mb-3">
                <i class="bi bi-shield-lock"></i>
                Informations du compte
              </h4>
              
              <div class="mb-3">
                <label class="form-label">Email</label>
                <div class="input-group">
                  {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse email'}}) }}
                  <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                </div>
                <div class="text-danger small">{{ form_errors(registrationForm.email) }}</div>
              </div>
              
              <div class="mb-3">
                <label class="form-label">Mot de passe</label>
                <div class="input-group">
                  {{ form_widget(registrationForm.password, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe sécurisé'}}) }}
                  <span class="input-group-text password-toggle" onclick="togglePassword(this)">
                    <i class="bi bi-eye-slash-fill"></i>
                  </span>
                </div>
                <div class="text-danger small">{{ form_errors(registrationForm.password) }}</div>
                <div class="form-hint">Au moins 8 caractères avec majuscules, minuscules et chiffres</div>
              </div>
              
              <div class="mb-3">
                <label class="form-label">Salaire</label>
                <div class="input-group">
                  {{ form_widget(registrationForm.salary, {'attr': {'class': 'form-control', 'placeholder': 'Salaire'}}) }}
                  <span class="input-group-text">DT</span>
                </div>
                <div class="text-danger small">{{ form_errors(registrationForm.salary) }}</div>
              </div>
            </div>
          </div>
          
          <div class="section-divider"></div>
          
          <!-- Documents et rôle -->
          <div class="row g-4">
            <div class="col-md-6">
              <h4 class="mb-3">
                <i class="bi bi-file-earmark"></i>
                Documents
              </h4>
              
              <div class="mb-4">
                <label class="form-label">CV</label>
                <div class="file-upload">
                  <i class="bi bi-cloud-arrow-up upload-icon"></i>
                  <p class="mb-2">Glissez votre CV ou cliquez pour sélectionner</p>
                  {{ form_widget(registrationForm.cv, {'attr': {'class': 'form-control', 'hidden': true, 'id': 'cv-upload'}}) }}
                  <button type="button" class="btn btn-outline-primary btn-sm" onclick="document.getElementById('cv-upload').click()">
                    Parcourir
                  </button>
                  <p class="selected-file mt-2 small"></p>
                </div>
                <div class="text-danger small">{{ form_errors(registrationForm.cv) }}</div>
              </div>
              
              <div class="mb-3">
                <label class="form-label">Photo de profil</label>
                <div class="file-upload">
                  <i class="bi bi-image upload-icon"></i>
                  <p class="mb-2">Glissez votre photo ou cliquez pour sélectionner</p>
                  {{ form_widget(registrationForm.profile_photo, {'attr': {'class': 'form-control', 'hidden': true, 'id': 'photo-upload'}}) }}
                  <button type="button" class="btn btn-outline-primary btn-sm" onclick="document.getElementById('photo-upload').click()">
                    Parcourir
                  </button>
                  <div class="preview-container mt-3"></div>
                </div>
                <div class="text-danger small">{{ form_errors(registrationForm.profile_photo) }}</div>
              </div>
            </div>
            
            <div class="col-md-6">
              <h4 class="mb-3">
                <i class="bi bi-person-badge"></i>
                Rôle utilisateur
              </h4>
              
              <div class="role-select">
                {% for child in registrationForm.role %}
                  <div class="role-item">
                    <div class="form-check">
                      {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                      {{ form_label(child, null, {'label_attr': {'class': 'form-check-label fw-medium'}}) }}
                    </div>
                    <div class="text-danger small">{{ form_errors(child) }}</div>
                    
                    <!-- Description du rôle basée sur la valeur -->
                    <div class="small text-muted mt-1">
                      {% if child.vars.value == 'ADMIN' %}
                        Accès complet à toutes les fonctionnalités du système
                      {% elseif child.vars.value == 'RH' %}
                        Gestion des employés et des ressources humaines
                      {% elseif child.vars.value == 'EMPLOYE' %}
                        Accès limité pour les employés standards
                      {% endif %}
                    </div>
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
          
          <div class="section-divider"></div>
          
          <!-- Boutons d'action -->
          <div class="d-flex justify-content-between align-items-center">
            <a href="{{ path('app_user_list') }}" class="btn btn-outline-secondary">
              <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
            
            <div>
              <button type="button" class="btn btn-outline-warning me-2" onclick="resetForm()">
                <i class="bi bi-x-circle"></i> Réinitialiser
              </button>
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle"></i> Créer l'utilisateur
              </button>
            </div>
          </div>
          
          {{ form_end(registrationForm) }}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Gestion du téléchargement des fichiers CV
    const cvUpload = document.getElementById('cv-upload');
    if (cvUpload) {
      cvUpload.addEventListener('change', function() {
        const selectedFile = document.querySelector('.selected-file');
        if (this.files[0]) {
          selectedFile.innerHTML = `<i class="bi bi-file-earmark-pdf"></i> ${this.files[0].name}`;
          selectedFile.classList.add('text-primary');
        } else {
          selectedFile.textContent = '';
        }
      });
    }
    
    // Gestion du téléchargement et de la prévisualisation des photos
    const photoUpload = document.getElementById('photo-upload');
    const previewContainer = document.querySelector('.preview-container');
    
    if (photoUpload && previewContainer) {
      photoUpload.addEventListener('change', function() {
        previewContainer.innerHTML = '';
        
        if (this.files[0]) {
          const reader = new FileReader();
          reader.onload = function(e) {
            const img = document.createElement('img');
            img.src = e.target.result;
            img.classList.add('img-thumbnail', 'mt-2');
            img.style.maxHeight = '150px';
            previewContainer.appendChild(img);
          }
          reader.readAsDataURL(this.files[0]);
        }
      });
    }
  });
  
  // Fonction pour basculer la visibilité du mot de passe
  function togglePassword(element) {
    const passwordInput = element.previousElementSibling;
    const icon = element.querySelector('i');
    
    if (passwordInput.type === 'password') {
      passwordInput.type = 'text';
      icon.classList.replace('bi-eye-slash-fill', 'bi-eye-fill');
    } else {
      passwordInput.type = 'password';
      icon.classList.replace('bi-eye-fill', 'bi-eye-slash-fill');
    }
  }
  
  // Fonction pour réinitialiser le formulaire
  function resetForm() {
    Swal.fire({
      title: 'Confirmer la réinitialisation ?',
      text: "Toutes les données saisies seront effacées.",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#4361ee',
      cancelButtonColor: '#6c757d',
      confirmButtonText: 'Oui, réinitialiser',
      cancelButtonText: 'Annuler'
    }).then((result) => {
      if (result.isConfirmed) {
        document.getElementById('registrationForm').reset();
        document.querySelector('.preview-container').innerHTML = '';
        document.querySelector('.selected-file').textContent = '';
        
        Swal.fire(
          'Formulaire réinitialisé !',
          'Toutes les données ont été effacées.',
          'success'
        );
      }
    });
  }
</script>
{% endblock %}