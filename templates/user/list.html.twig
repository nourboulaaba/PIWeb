{% extends 'indexback.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    .table-responsive {
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }
    .user-photo {
      width: 50px;
      height: 50px;
      object-fit: cover;
      border-radius: 4px;
    }
    .cv-link {
      display: inline-block;
      padding: 3px 8px;
      background: #f8f9fa;
      border-radius: 4px;
      color: #007bff;
      text-decoration: none;
    }
    .badge-role {
      font-size: 0.8em;
      padding: 0.4em 0.6em;
      text-transform: uppercase;
    }
    .action-btns .btn {
      padding: 0.25rem 0.5rem;
      font-size: 0.8rem;
    }
    @media (max-width: 992px) {
      .compact-column {
        max-width: 100px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }
    }
    /* Styles améliorés pour la pagination */
    .pagination-wrapper {
      display: flex;
      justify-content: center;
      margin: 2rem 0;
    }
    .pagination {
      display: inline-flex;
      border-radius: 0.25rem;
      overflow: hidden;
      box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
    .page-item {
      margin: 0;
    }
    .page-item:first-child .page-link {
      border-top-left-radius: 0.25rem;
      border-bottom-left-radius: 0.25rem;
    }
    .page-item:last-child .page-link {
      border-top-right-radius: 0.25rem;
      border-bottom-right-radius: 0.25rem;
    }
    .page-link {
      padding: 0.5rem 0.75rem;
      color: #495057;
      background-color: #fff;
      border: 1px solid #dee2e6;
      transition: all 0.3s ease;
    }
    .page-link:hover {
      color: #0056b3;
      background-color: #e9ecef;
      border-color: #dee2e6;
    }
    .page-item.active .page-link {
      z-index: 1;
      color: #fff;
      background-color: #007bff;
      border-color: #007bff;
    }
    .page-item.disabled .page-link {
      color: #6c757d;
      pointer-events: none;
      background-color: #fff;
      border-color: #dee2e6;
    }
  </style>
{% endblock %}

{% block body %}
  <div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Liste des Utilisateurs</h1>
      <a href="{{ path('app_register') }}" class="btn btn-primary">
        <i class="fas fa-plus"></i> Ajouter
      </a>
    </div>

    <div class="card shadow-sm">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-striped table-hover mb-0">
            <thead class="thead-dark">
            <tr>
              <th>ID</th>
              <th>CIN</th>
              <th>Nom</th>
              <th>Prénom</th>
              <th>Téléphone</th>
              <th>Rôle</th>
              <th>Email</th>
              <th>Face ID</th>
              <th>Date Embauche</th>
              <th>Identifier</th>
              <th>CV</th>
              <th>Photo</th>
              <th>Salaire</th>
              <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
              <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.cin ?? 'N/A' }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.phoneNumber ?? 'N/A' }}</td>
                <td>
                  <span class="badge badge-role
                    {% if user.role == 'RH' %}bg-primary
                    {% elseif user.role == 'EMPLOYE' %}bg-success
                    {% else %}bg-secondary
                    {% endif %}">
                    {{ user.role }}
                  </span>
                </td>
                <td class="compact-column">{{ user.email }}</td>
                <td class="compact-column">{{ user.faceId ?? 'N/A' }}</td>
                <td>{{ user.hireDate }}</td>
                <td class="compact-column">{{ user.identifier ?? 'N/A' }}</td>
                <td>
                  {% if user.cv %}
                    <a href="{{ asset('uploads/cvs/' ~ user.cv) }}"
                       class="cv-link"
                       target="_blank"
                       title="Voir CV">
                      <i class="fas fa-file-pdf"></i> CV
                    </a>
                  {% else %}
                    N/A
                  {% endif %}
                </td>
                <td>
                  {% if user.profilePhoto %}
                    <img src="{{ asset('uploads/profile_photos/' ~ user.profilePhoto) }}"
                         class="user-photo"
                         alt="Photo de profil">
                  {% else %}
                    <div class="user-photo bg-secondary text-white d-flex align-items-center justify-content-center">
                      <i class="fas fa-user"></i>
                    </div>
                  {% endif %}
                </td>
                <td>{{ user.salary ?? 'N/A' }}</td>
                <td class="action-btns">
                  <div class="d-flex">
                    <a href="{{ path('app_user_show', {'id': user.id}) }}"
                       class="btn btn-sm btn-info mr-1"
                       title="Voir">
                      <i class="fas fa-eye"></i> Voir
                    </a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}"
                       class="btn btn-sm btn-warning mr-1"
                       title="Modifier">
                      <i class="fas fa-edit"></i> Modifier
                    </a>
                    <form method="post"
                          action="{{ path('app_user_delete', {'id': user.id}) }}"
                          onsubmit="return confirm('Confirmer la suppression?');">
                      <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                      <button class="btn btn-sm btn-danger" title="Supprimer">
                        <i class="fas fa-trash"></i> Supprimer
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            {% else %}
              <tr>
                <td colspan="14" class="text-center py-4">Aucun utilisateur trouvé</td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>

    {# Pagination centrée et stylée #}
    <div class="pagination-wrapper">
      {{ knp_pagination_render(users, null, {}, {
        'align': 'center',
        'size': 'medium',
        'style': 'rounded',
        'span_class': 'page-link'
      }) }}
    </div>
  </div>
{% endblock %}
