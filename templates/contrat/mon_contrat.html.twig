{% extends 'basefront.html.twig' %}

{% block title %}Mon Contrat{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="fas fa-file-contract me-2"></i>Mon Contrat</h2>
        </div>
        
        <div class="card-body">
            {% if contrat %}
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-4">
                            <h5 class="text-primary">Informations Employé</h5>
                            <hr>
                            <p><strong>Nom complet :</strong> {{ user.firstName }} {{ user.lastName }}</p>
                            <p><strong>Matricule :</strong> {{ user.identifier }}</p>
                            <p><strong>Département :</strong> {{ user.department ?? 'Non spécifié' }}</p>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="mb-4">
                            <h5 class="text-primary">Détails du Contrat</h5>
                            <hr>
                            <p><strong>Type :</strong> {{ contrat.type }}</p>
                            <p><strong>Date de début :</strong> {{ contrat.dateDebut|date('d/m/Y') }}</p>
                            <p><strong>Date de fin :</strong> {{ contrat.dateFin ? contrat.dateFin|date('d/m/Y') : 'CDI' }}</p>
                            <p><strong>Salaire :</strong> {{ contrat.salaire|number_format(2, ',', ' ') }} €</p>
                            <p><strong>Statut :</strong> 
                                <span class="badge bg-{{ contrat.dateFin and contrat.dateFin < date() ? 'danger' : 'success' }}">
                                    {{ contrat.dateFin and contrat.dateFin < date() ? 'Expiré' : 'Actif' }}
                                </span>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="alert alert-info mt-4">
                    <h5><i class="fas fa-info-circle me-2"></i>Clauses importantes</h5>
                    <ul class="mb-0">
                        <li>Période d'essai : 3 mois</li>
                        <li>Congés payés : 2.5 jours/mois</li>
                        <li>Préavis : 1 mois</li>
                    </ul>
                </div>
            {% else %}
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Aucun contrat trouvé pour votre compte.
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}