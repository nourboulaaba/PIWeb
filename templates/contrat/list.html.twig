{# templates/contrat/list.html.twig #}
{% extends 'indexback.html.twig' %}

{% block title %}Liste des Contrats{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    .table-responsive { overflow-x: auto; }
    .action-btns .btn { padding: .25rem .5rem; font-size: .8rem; }
    @media (max-width: 992px) {
      .compact-column {
        max-width: 100px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }
    }
    .custom-pagination {
      display: flex; justify-content: center; flex-wrap: wrap;
      gap: .5rem; margin: 1.5rem 0;
    }
    .custom-pagination .btn { min-width: 3rem; }
  </style>
{% endblock %}

{% block body %}
  <div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Liste des Contrats</h1>
      <a href="{{ path('app_contrat_new') }}" class="btn btn-primary">
        <i class="fas fa-plus"></i> Ajouter un contrat
      </a>
    </div>

    <div class="card shadow-sm">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-striped table-hover mb-0">
            <thead class="thead-dark">
              <tr>
                <th>ID</th>
                <th>ID Employé</th>
                <th>Type</th>
                <th>Date Début</th>
                <th>Date Fin</th>
                <th>Salaire</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              {# On boucle sur pagination #}
              {% for contrat in pagination %}
                <tr>
                  <td>{{ contrat.idContrat }}</td>
                  <td class="compact-column">{{ contrat.idEmploye }}</td>
                  <td>{{ contrat.type }}</td>
                  <td>{{ contrat.dateDebut ? contrat.dateDebut|date('d/m/Y') : 'N/A' }}</td>
                  <td>{{ contrat.dateFin   ? contrat.dateFin|date('d/m/Y')   : 'N/A' }}</td>
                  <td>{{ contrat.salaire }} TND</td>
                  <td class="action-btns">
                    <div class="d-flex">
                      <a href="{{ path('app_contrat_show',   {'IdContrat': contrat.idContrat}) }}"
                         class="btn btn-sm btn-info me-1" title="Voir">
                        <i class="fas fa-eye"></i>
                      </a>
                      <a href="{{ path('app_contrat_edit',   {'IdContrat': contrat.idContrat}) }}"
                         class="btn btn-sm btn-warning me-1" title="Modifier">
                        <i class="fas fa-edit"></i>
                      </a>
                      <form method="post"
                            action="{{ path('app_contrat_delete',{'IdContrat': contrat.idContrat}) }}"
                            onsubmit="return confirm('Supprimer ce contrat ?');">
                        <input type="hidden" name="_token"
                               value="{{ csrf_token('delete' ~ contrat.idContrat) }}">
                        <button class="btn btn-sm btn-danger me-1" title="Supprimer">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>

                      {# Bouton PDF #}
                      <a href="{{ path('contrat_pdf', {id: contrat.idContrat}) }}"
                         class="btn btn-sm btn-outline-success" title="Télécharger PDF">
                        <i class="fas fa-download"></i>
                      </a>
                    </div>
                  </td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="7" class="text-center py-4">
                    Aucun contrat trouvé.
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>

    {# Pagination custom en bas de page #}
    <div class="custom-pagination">
      {% if pagination.currentPageNumber > 1 %}
        {% set prev = pagination.currentPageNumber - 1 %}
        <a href="{{ path(app.request.attributes.get('_route'),
                        app.request.query.all|merge({page: prev})) }}"
           class="btn btn-secondary btn-lg">Précédent</a>
      {% else %}
        <button class="btn btn-secondary btn-lg" disabled>Précédent</button>
      {% endif %}

      {% for i in 1..pagination.pageCount %}
        {% if i == pagination.currentPageNumber %}
          <span class="btn btn-primary btn-lg disabled">{{ i }}</span>
        {% else %}
          <a href="{{ path(app.request.attributes.get('_route'),
                          app.request.query.all|merge({page: i})) }}"
             class="btn btn-outline-primary btn-lg">{{ i }}</a>
        {% endif %}
      {% endfor %}

      {% if pagination.currentPageNumber < pagination.pageCount %}
        {% set next = pagination.currentPageNumber + 1 %}
        <a href="{{ path(app.request.attributes.get('_route'),
                        app.request.query.all|merge({page: next})) }}"
           class="btn btn-secondary btn-lg">Suivant</a>
      {% else %}
        <button class="btn btn-secondary btn-lg" disabled>Suivant</button>
      {% endif %}
    </div>
  </div>
{% endblock %}
