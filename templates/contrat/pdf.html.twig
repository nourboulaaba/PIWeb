{# templates/contrat/pdf.html.twig #}
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <style>
      body { font-family: sans-serif; font-size: 12px; }
      h1 { text-align: center; margin-bottom: 1em; }
      table { width: 100%; border-collapse: collapse; margin-top: 1em; }
      th, td { border: 1px solid #333; padding: 0.5em; }
    </style>
  </head>
  <body>
    <h1>Contrat n° {{ contrat.idContrat }}</h1>

    <p><strong>ID Employé :</strong> {{ contrat.idEmploye }}</p>
    <p><strong>Type :</strong> {{ contrat.type }}</p>
    <p><strong>Début :</strong> {{ contrat.dateDebut|date('d/m/Y') }}</p>
    <p><strong>Fin :</strong> {{ contrat.dateFin|date('d/m/Y') }}</p>
    <p><strong>Salaire :</strong> {{ contrat.salaire }} TND</p>

    <h2>Détails du contrat</h2>
    <table>
      <thead>
        <tr><th>Champ</th><th>Valeur</th></tr>
      </thead>
      <tbody>
        <tr><td>ID Contrat</td><td>{{ contrat.idContrat }}</td></tr>
        <tr><td>ID Employé</td><td>{{ contrat.idEmploye }}</td></tr>
        <tr><td>Type</td><td>{{ contrat.type }}</td></tr>
        <tr><td>Date Début</td><td>{{ contrat.dateDebut|date('d/m/Y') }}</td></tr>
        <tr><td>Date Fin</td><td>{{ contrat.dateFin|date('d/m/Y') }}</td></tr>
        <tr><td>Salaire</td><td>{{ contrat.salaire }} TND</td></tr>
      </tbody>
    </table>
  </body>
</html>
