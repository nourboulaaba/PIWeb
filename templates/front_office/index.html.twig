{% extends 'basefront.html.twig' %}

{% block title %}Offres – Front Office{% endblock %}

{% block body %}
    <style>
        /* General Styles */
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f7f7f7;
        }

        /* Header Styling */
        h2 {
            font-family: 'Roboto', sans-serif;
            font-weight: bold;
        }

        /* Card Styles */
        .card {
            border: none;
            border-radius: 15px;
            background: linear-gradient(145deg, #ffffff, #f2f2f2);
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

        /* Button Styles */
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

        .btn-info:hover {
            background-color: #138496;
            border-color: #117a8b;
        }

        .btn-lg {
            padding: 10px 20px;
            font-size: 1.1rem;
        }

        /* Form Input Styles */
        .form-control {
            border-radius: 30px;
            padding: 12px;
            font-size: 1rem;
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

        /* Apply a smooth transition to the card hover effect */
        .transition-transform {
            transition: transform 0.3s ease-in-out;
        }

        .transform-on-hover:hover {
            transform: translateY(-10px);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .col-md-4 {
                flex: 0 0 100%;
            }

            .col-md-6,
            .col-md-4 {
                max-width: 100%;
            }
        }
    </style>
    <style>
        .pagination-container {
            margin: 2rem 0;
            display: flex;
            justify-content: center;
            overflow-x: auto;
        }

        .pagination {
            display: flex;
            flex-direction: row;
            flex-wrap: nowrap;
            gap: 6px;
            align-items: center;
            padding: 8px 0;
        }

        .page-item {
            display: inline-flex;
            margin: 0 2px;
            transition: transform 0.2s ease;
        }

        .page-link {
            color: #2A4B7C;
            border: 1px solid #dee2e6;
            border-radius: 8px !important;
            min-width: 40px;
            height: 40px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-weight: 500;
            transition: all 0.2s ease;
            white-space: nowrap;
        }

        /* Keep existing hover and active styles */
        .page-link:hover {
            background-color: #F4F7FA;
            color: #1a365e;
            border-color: #2A4B7C;
            transform: translateY(-2px);
        }

        .page-item.active .current {
            background: linear-gradient(135deg, #2A4B7C 0%, #3B5998 100%);
            color: white !important;
            border-color: transparent;
            box-shadow: 0 4px 15px rgba(42, 75, 124, 0.2);
        }

        @media (max-width: 576px) {
            .pagination {
                gap: 4px;
            }

            .page-link {
                min-width: 35px;
                height: 35px;
                font-size: 0.9rem;
            }
        }
    </style>

    <div class="container mt-5">
        <h2 class="text-center mb-4">Liste des offres</h2>

        <!-- Search and Department Filter Form -->
        <form method="get" action="{{ path('front_office_offres') }}" class="mb-5">
            <div class="row mb-3 justify-content-center">
                <div class="col-md-6 col-lg-4 mb-3">
                    <input type="text" name="q" class="form-control shadow-sm rounded-pill py-2" placeholder="Rechercher une offre..." value="{{ query }}">
                </div>
                <div class="col-md-4 col-lg-3 mb-3">
                    <select name="departement" class="form-control shadow-sm rounded-pill">
                        <option value="">Tous les départements</option>
                        {% for departement in departements %}
                            <option value="{{ departement.id }}" {% if departement.id == departementId %}selected{% endif %}>{{ departement.nom }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-2 mb-3">
                    <button type="submit" class="btn btn-primary btn-lg w-100 shadow-sm rounded-pill">Filtrer</button>
                </div>
            </div>
        </form>

        <!-- Display Offers -->
        <div class="row">
            <div class="pagination-container">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        {% if currentPage > 1 %}
                            <li class="page-item">
                                <a class="page-link prev-next" href="{{ path('front_office_offres', {'page': currentPage - 1}) }}" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                        {% endif %}

                        {% for i in 1..totalPages %}
                            {% if i == currentPage %}
                                <li class="page-item active" aria-current="page">
                                    <span class="page-link current">{{ i }}</span>
                                </li>
                            {% else %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('front_office_offres', {'page': i}) }}">{{ i }}</a>
                                </li>
                            {% endif %}
                        {% endfor %}

                        {% if currentPage < totalPages %}
                            <li class="page-item">
                                <a class="page-link prev-next" href="{{ path('front_office_offres', {'page': currentPage + 1}) }}" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>


            {% for offre in offres %}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg h-100 rounded-3 transition-transform transform-on-hover">
                        <div class="card-body">
                            <h5 class="card-title text-dark fw-bold">{{ offre.titre }}</h5>
                            <p class="card-text text-muted" style="font-size: 0.95rem;">{{ offre.description|length > 100 ? offre.description|slice(0, 100) ~ '...' : offre.description }}</p>
                            <p class="card-text"><strong>Salaire:</strong> <span class="text-success">{{ offre.salaireMin }} - {{ offre.salaireMax }} DT</span></p>
                            <a href="{{ path('app_offre_show', {'id': offre.id}) }}" class="btn btn-info w-100 shadow-sm rounded-pill">Voir</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center">
                    <div class="alert alert-info">Aucune offre trouvée</div>
                </div>
            {% endfor %}

        </div>

    </div>

{% endblock %}
